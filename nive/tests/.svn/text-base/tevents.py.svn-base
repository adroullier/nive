
import time
import unittest

from Poolyx.definitions import *
from Poolyx.events import *



# -----------------------------------------------------------------

class testobj(object, Events):
    def __init__(self):
        self.InitEvents()
    
    def callme(self):
        self.Signal("callme", data=1)
        

class EventTest(unittest.TestCase):

    def setUp(self):
        self.obj = testobj()


    def event_test(self, **kw):
        self.called = kw.get("data")

    def test_events1(self):
        self.called = 0
        self.obj.RegisterEvent("test", self.event_test)
        self.obj.Signal("test", data=12345)
        self.assert_(self.called==12345)
        self.obj.RemoveEvent("test", self.event_test)
        self.obj.Signal("test", data=67890)
        self.assert_(self.called==12345)

    def test_eventobj(self):
        self.called = 0
        self.obj.RegisterEvent("callme", self.event_test)
        self.obj.callme()
        self.assert_(self.called==1)
        self.obj.RemoveEvent("callme", self.event_test)
        self.called=0
        self.obj.callme()
        self.assert_(self.called==0)




if __name__ == '__main__':
    unittest.main()
