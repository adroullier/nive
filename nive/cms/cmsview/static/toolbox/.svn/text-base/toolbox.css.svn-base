#poolyx_toolbox {
  overflow: hidden;
  width: 300px;
  height: auto;
  position: absolute;
  top: 20px;
  right: 20px;
  color: #363636;
  background-color:#AAAAAA;
  border: 2px solid #AAAAAA;
  position: fixed;
  z-index:8888;
  box-shadow:2px 2px 2px #666666;
}

#poolyx_toolbox .toolbox_widget {
  margin-bottom:1px;
  border: 1px solid #E0E0E0;
  max-height: 400px;
}
#poolyx_toolbox #toolbox_header {
  cursor:pointer;
  padding-right: 10px;
}
#poolyx_toolbox #toolbox_header .toggle {
  float:right;
  cursor:pointer;
  width:16px;
  padding-top:3px;
  padding-left:6px;
}
#poolyx_toolbox #toolbox_header h1 {
  font-family: courier, monospace;
  font-size:13pt;
  font-weight:bold;
  color: white;
  padding: 0px;
  margin: 2px;
  width: auto;
  text-align: right;
}
#poolyx_toolbox .toolbox_widget .widget_head {
  font-size:9pt;
  font-weight:bold;
  padding:4px;
  background: url('bg.gif') repeat-x;
}
#poolyx_toolbox .toolbox_widget .widget_content {
  font-size:9pt;
  padding:4px;
  background-color: #E4E4E4;
}
#poolyx_toolbox a {
  color: #363636;
}
#poolyx_toolbox .toolbox_widget .widget_content a.mainOption {
  color: #363636;
  display: block;
  border-bottom: 1px solid #cdcdcd;
  padding-top: 3px;
  padding-bottom: 3px;
}
#poolyx_toolbox .toolbox_widget p {
  font-size:8pt;
  padding-top:4px;
  margin:0px;
  color: #565656;
}

/* element list --------------------------------- */
#poolyx_toolbox .toolbox_widget .subpages {
}
#poolyx_toolbox .toolbox_widget .subpages a {
  margin: 0px;
  padding: 0px;
  display: block;
}
#poolyx_toolbox .toolbox_widget .subpages a:hover {
  text-decoration:none;
}
#poolyx_toolbox .toolbox_widget .subpages .element {
  border-bottom: 1px solid #cdcdcd;
  padding-top: 3px;
  padding-bottom: 3px;
}
#poolyx_toolbox .toolbox_widget .subpages .el_title {
  float: left;
  width: 55%;
  padding-left: 6px;
}
#poolyx_toolbox .toolbox_widget .subpages .el_options {
  float:right;
  width: 40%;
  padding-right: 6px;
}
#poolyx_toolbox .toolbox_widget .subpages .el_options a {
  margin: 0px;
  width: auto;
  display: inline;
}
#poolyx_toolbox .toolbox_widget .subpages .el_options a img {
  padding: 0px;
  margin: 0px;
  width: auto;
  display: inline;
}
#poolyx_toolbox .toolbox_widget .subpages .el_options .block {
  float:left;
  width: auto;
  padding-left: 6px;
  padding-right: 6px;
  margin: 0px;
  border-right: 1px solid #cdcdcd;
}
#poolyx_toolbox .toolbox_widget .subpages .el_options .block_del {
  width: auto;
  float:right;
  padding-left: 6px;
  padding-right: 0px;
}
