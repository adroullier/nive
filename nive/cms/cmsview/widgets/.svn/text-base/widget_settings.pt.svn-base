<div tal:define="page python:context.GetPage(); 
                 pageUrl python:view.FolderUrl(page);
                 app view.context.app();
                 elementContainer python:context.GetElementContainer();"
     class="toolbox_widget"
     i18n:domain="poolyx">
 <!-- system and settings -->
 <div class="widget_head" i18n:translate="">Settings</div>
 <div class="widget_content">
    <a id="peMenuEditOn" onclick="peEnable()" style="display:none; cursor:pointer" class="mainOption"
       ><img tal:attributes="src view.StaticUrl('Poolyx.cms.cmsview:static/images/on.png')" 
             title="Enable interactive elements" i18n:attributes="title" /> 
             <span i18n:translate="">Enable interactive elements</span></a>

    <a id="peMenuEditOff" onclick="peEnable()" style="display:none; cursor:pointer" class="mainOption"
       ><img tal:attributes="src view.StaticUrl('Poolyx.cms.cmsview:static/images/off.png')"  
             title="Disable interactive elements" i18n:attributes="title" /> 
             <span i18n:translate="">Disable interactive elements</span></a>

    <a tal:condition="view.Allowed('manage users', context=app.portal().userdb)"
       tal:on-error="nothing"
       href="/userdb/usermanagement" class="mainOption" i18n:translate="">User management</a>
    <a tal:condition="view.Allowed('administration', context=app)"
       tal:on-error="nothing"
       href="${view.FolderUrl(app)}admin" class="mainOption" i18n:translate="">Administration</a>
    <a href="/account" class="mainOption" i18n:translate="">My account</a>
    <a href="exiteditor" class="mainOption" i18n:translate="">Exit editor</a>
    <a href="/logout" class="mainOption" i18n:translate="">Log out</a>
 </div>
</div>
