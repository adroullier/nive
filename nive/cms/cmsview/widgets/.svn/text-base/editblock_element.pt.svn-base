<div tal:define="page python:obj.GetPage(); 
                 elementContainer python:obj.GetElementContainer();
                 parentUrl python:view.FolderUrl(obj.GetParent())"
     id="edit${obj.GetID()}"
     class="pageeditorEditblock" 
     onClick="peStopEvent(event)" 
     style="display:none"
     i18n:domain="poolyx">

  <!-- add edit -->
  <div class="options_block">
    <a href="#" 
       onClick="peLoadToggleBlock('${view.FolderUrl(obj)}elementAddWidget', 'add${obj.GetID()}',event);return false;"
       ><img src="${view.StaticUrl('Poolyx.cms.cmsview:static/images/element_add.png')}" 
             title="Add a new page element" align="top" i18n:attributes="title" /> </a>
  </div>
  
  <div tal:attributes="id string:add${obj.GetID()}" class="addElements"></div>
  <div class="options_block">
    <a href="${view.FolderUrl(obj)}edit" rel="poolyxOverlay" name="Edit" 
 	   ><img src="${view.StaticUrl('Poolyx.cms.cmsview:static/images/editor.png')}" 
 	         title="Edit" align="top" i18n:attributes="title" /> </a>
  </div>

  <!-- cut copy paste -->
  <div class="options_block">
    <a tal:condition="obj.CanCopy()"
       href="${parentUrl}copy?ids=${obj.GetID()}"
       ><img src="${view.StaticUrl('Poolyx.cms.cmsview:static/images/copy.png')}" 
             title="Copy element" align="top" i18n:attributes="title" /> </a>
    
    <a tal:condition="obj.CanCopy()"
       href="${parentUrl}cut?ids=${obj.GetID()}"
       ><img src="${view.StaticUrl('Poolyx.cms.cmsview:static/images/cut.png')}" 
             title="Cut element" align="top" i18n:attributes="title" /> </a>
    
    <a tal:condition="elementContainer.CanPaste() and not view.ClipboardEmpty()"
       href="${view.FolderUrl(elementContainer)}paste?pepos=${obj.GetID()}"
       ><img src="${view.StaticUrl('Poolyx.cms.cmsview:static/images/paste.png')}" 
             title="Paste here" align="top" i18n:attributes="title" /> </a>
  </div>

  <!-- sort -->
  <div class="options_block">
    <a href="${parentUrl}moveup?id=${obj.GetID()}"
       ><img src="${view.StaticUrl('Poolyx.cms.cmsview:static/images/up.png')}" 
             title="Move up" align="top" i18n:attributes="title" /> </a>
    
    <a href="${parentUrl}movedown?id=${obj.GetID()}"
       ><img src="${view.StaticUrl('Poolyx.cms.cmsview:static/images/down.png')}" 
             title="Move down" align="top" i18n:attributes="title" /> </a>
  </div>

  <!-- delete -->
  <div class="options_block_del">
    <a href="${parentUrl}delete?id=${obj.GetID()}" rel="poolyxOverlay" name="Delete" 
 	   ><img tal:attributes="src view.StaticUrl('Poolyx.cms.cmsview:static/images/delete.png')" 
 	         title="Delete" align="top" i18n:attributes="title" /> </a>
  </div>
  <br style="clear:both"/>

</div>
