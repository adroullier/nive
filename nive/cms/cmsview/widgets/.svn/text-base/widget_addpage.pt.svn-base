<div tal:define="page python:context.GetPage(); 
                 pageUrl python:view.FolderUrl(page);
                 elementContainer python:context.GetElementContainer();"
     class="toolbox_widget"
     i18n:domain="poolyx">
 <!-- add page and page templates -->
 <div class="widget_head" i18n:translate="">Add a new page</div>
 <div class="widget_content">
 <a href="${pageUrl}add?pool_type=page&amp;pepos=last" rel="poolyxOverlay" class="mainOption"
        ><img tal:attributes="src view.StaticUrl('Poolyx.cms.cmsview:static/images/subpage.png')" 
              title="Add a new sub page" align="top" i18n:attributes="title" /> 
              <span i18n:translate="">Add sub page</span></a>
 <a tal:condition="context.GetID()!=0"
    href="${pageUrl}../add?pool_type=page&amp;pepos=${context.GetID()}" rel="poolyxOverlay" class="mainOption"
        ><img tal:attributes="src view.StaticUrl('Poolyx.cms.cmsview:static/images/types/page_add.png')" 
              title="Add a new page after this" align="top" i18n:attributes="title" />
              <span i18n:translate="">Add page after this</span></a>
 </div>
</div>
