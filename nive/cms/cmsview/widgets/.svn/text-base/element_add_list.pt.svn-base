<div tal:define="page obj.GetPage(); 
                 elementContainer obj.GetElementContainer();
                 containerUrl view.FolderUrl(elementContainer);
                 static view.StaticUrl('Poolyx.cms.cmsview:static/images/types/')"
     i18n:domain="poolyx">
  <h4 onClick="peToggleBlock('add${obj.GetID()}',event)" i18n:translate="">Add a new page element?</h4>
  <a tal:repeat="element elementContainer.AllowedPageElements('')" rel="poolyxOverlay"
     tal:attributes="href containerUrl+'add?'+view.FmtURLParam(pool_type=element['id'], pepos=obj.GetID())"
     ><img tal:attributes="src static+element['id']+'_add.png'; title element['name']" 
           align="top" i18n:attributes="title" />
     <span i18n:translate="">${element.name}</span></a>
</div>
