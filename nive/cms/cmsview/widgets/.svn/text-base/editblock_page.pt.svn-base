<div tal:define="page python:obj.GetPage(); 
                 pageUrl python:view.FolderUrl(page);
                 elementContainer python:obj.GetElementContainer();"
     id="pageedit${obj.GetID()}" 
     class="pageeditorEditblock pageeditorEditblockPage" 
     onClick="peStopEvent(event)"
     i18n:domain="poolyx">

  <!-- add edit -->
  <div class="options_block">
    <a href="#" 
       onClick="peLoadToggleBlock('${view.FolderUrl(obj)}elementAddWidget', 'add${obj.GetID()}',event); return false;"
       ><img src="${view.StaticUrl('Poolyx.cms.cmsview:static/images/element_add.png')}" 
             title="Add a new page element" align="top" i18n:attributes="title" /></a>
  </div>
  <div tal:attributes="id string:add${obj.GetID()}" class="addElements"></div>
  <div class="options_block">
    <a href="#" 
       onClick="peLoadToggleBlock('${view.FolderUrl(obj)}elementListWidget', 'elements${obj.GetID()}',event); return false;"
       ><img src="${view.StaticUrl('Poolyx.cms.cmsview:static/images/element.png')}" 
             title="List existing page elements" align="top" i18n:attributes="title" /></a>
  </div>
  <div tal:attributes="id string:elements${obj.GetID()}" class="listElements"></div>
  <div class="options_block">
    <a tal:condition="obj.GetID()!=0"
       href="${pageUrl}edit" rel="poolyxOverlay"
   	   ><img tal:attributes="src view.StaticUrl('Poolyx.cms.cmsview:static/images/editor.png')" 
   	         title="Edit page settings" align="top" i18n:attributes="title" /> </a>
  </div>
  <!-- sort -->
  <div class="options_block">
    <a href="${pageUrl}sortelements" rel="poolyxOverlay" class="mainOption"
   	   ><img tal:attributes="src view.StaticUrl('Poolyx.cms.cmsview:static/images/sort.png')" 
   	         title="Sort elements" align="top" i18n:attributes="title" /> </a>
  </div>
  <!-- cut copy paste -->
  <div class="options_block">
    <a tal:condition="elementContainer.CanPaste() and not view.ClipboardEmpty()"
       href="${pageUrl}paste?pepos=${obj.GetID()}"
       ><img src="${view.StaticUrl('Poolyx.cms.cmsview:static/images/paste.png')}" 
             title="Paste here" align="top" i18n:attributes="title" /> </a>
  </div>

  <br style="clear:both"/>
</div>
