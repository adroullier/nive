<div class="pageelement peMenublock" id="pe${context.GetID()}" 
     tal:define="menu context.data.get('menutype')" i18n:domain="poolyx">
<tal:block tal:condition="menu == u'tree'">
  <div id="navigationBox">
    <h2 tal:condition="context.meta.title"
        tal:content="structure context.meta.title" class="boxHeader"/>
    <span tal:replace="structure view.navigationTree(page=request.context)"/>
  </div>
</tal:block>
<tal:block tal:condition="menu == u'subtree'">
  <div id="navigationBox">
    <h2 tal:condition="context.meta.title"
        tal:content="structure context.meta.title" class="boxHeader"/>
    <span tal:replace="structure view.navigationSub(page=request.context)"/>
  </div>
</tal:block>
<tal:block tal:condition="menu not in (u'tree',u'subtree')">
  <h2 tal:condition="context.meta.title"
      tal:content="structure context.meta.title" class="boxHeader"/>
  <a tal:repeat="page context.GetMenuPages()"
     tal:content="structure page.GetTitle()"
     href="${view.PageUrl(page)}"></a>
</tal:block>
</div>

