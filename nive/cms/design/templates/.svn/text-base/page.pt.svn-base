<tal:block metal:use-macro="view.index_tmpl().macros['main']">
  <tal:block metal:fill-slot="content">
    <h1 tal:condition="context.data.get('header')" tal:content="structure context.data.get('header')"></h1>
    <div tal:condition="context.IsLinked() and view.IsEditmode()" class="peNote">
      <span i18n:translate="">This page is redirected in view mode:</span> 
      <a href="${context.IsLinked()}" target="_blank">${context.IsLinked()}</a> 
    </div>
    <span tal:repeat="el context.GetPageElements(user=view.User(), checkPermissions=True)"
          tal:replace="structure view.RenderView(el, secure=True, raiseUnauthorized=False)"/>
  </tal:block>   
</tal:block>