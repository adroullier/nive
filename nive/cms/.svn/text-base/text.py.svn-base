__doc__ = """
Text
-----
Text element for the web page. Can be used to add headers, preformatted text
and paragraphs to the web page. 
"""

from Poolyx.i18n import _
from Poolyx.utils.utils import ConvertHTMLToText, CutText

from Poolyx.definitions import StagPageElement, ObjectConf, FieldConf
from Poolyx.components.objects.base import PageElementBase


class text(PageElementBase):
    """
    basic text class
    """
    
    titleLen = 20

    def Init(self):
        self.RegisterEvent("commit", self.OnCommit)


    def OnCommit(self):
        text = ConvertHTMLToText(self.data.get("textblock"), removeReST=True)
        self.meta["title"] = CutText(text, self.titleLen)
        return True


# text type definition ------------------------------------------------------------------
#@poolyx_module
configuration = ObjectConf(
    id = "text",
    name = _(u"Text"),
    dbparam = "texts",
    context = "Poolyx.cms.text.text",
    template = "text.pt",
    selectTag = StagPageElement,
    description = _(u"Text element for the web page. Can be used to add headers, preformatted text and paragraphs to the web page. ")
)

configuration.data = [
    FieldConf(id="textblock", datatype="htext", size=10000, default=u"", name=_(u"Text"), fulltext=True, description=u""),
]

fields = ["textblock", "pool_groups"]
configuration.forms = {"create": {"fields":fields}, "edit": {"fields":fields}}

configuration.views = []
