<tal:block metal:define-macro="main"><!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" i18n:domain="nive">
<head>
<title i18n:translate="">Login</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<meta name="description" content="" />
<meta name="keywords" content="" />
<meta name="generator" content="nive CMS" />
<style>
body {font-family: Verdana, Arial, sans-serif; font-size:80%;}
#container {margin: auto; height:auto;width:380px;}
#main {margin-top:40%; width:auto;padding:10px;}
#header {padding-bottom:20px;font-family: Courier, monospace;text-align:left;color: #000000;font-size:20pt;border-bottom:1px dashed #aaaaaa;}
form {margin-top:10px;}
.fieldRow {color:#666666;float:left; margin-right:1%; margin-bottom:10px;}
.widget .fieldRow {width:49%;}
.mailpass .fieldRow {width:99%;}
.formOptions {margin-top:10px;margin-right:1%;clear:both;}
.clear {clear:both;}
input {width:95%;}
.widget .req {display:none;}
ul {list-style:none;padding:0px;margin-bottom:10px;}
li {padding:0px;margin:0px;}
.links {padding-top:20px;margin-top:10px;border-top:1px dashed #aaaaaa;}
a {padding:2px 8px 2px 8px;background-color:gray;margin-right:1px;text-decoration:none;color:white;}
/* error handling */
h3 {font-size:100%;}
.poolform .errorLi { text-align: left; }
.poolform li.error, .poolform div.error{ background-color: #FFDFDF; }
.poolform li.error label.desc, .poolform p.error, .poolform h3.errorMsgLbl{ color: #DF0000; }
.poolform p.error{font-size: 70%;}
</style>
</head>

<body i18n:domain="nive">
<div id="container">
  <div id="main">
  <div id="header">nive CMS</div>

  <tal:block metal:define-slot="tmpls"></tal:block>
  <div tal:define="user view.User()" class="links">
  <a tal:condition="not user and request.view_name!='login'"
     href="login" i18n:translate="">Login</a>
  <a tal:condition="not user and request.view_name!='mailpass'"
     href="mailpass" i18n:translate="">Forgot password</a>
  <a tal:condition="not user and view.Allowed('signup', context=None) and request.view_name!='signup'"
     href="signup" i18n:translate="">Signup</a>
  <a tal:condition="user and request.view_name!='update'"
     href="update" i18n:translate="">Account</a>
  <a tal:condition="user and request.view_name!='login'"
     href="logout?redirect=login" i18n:translate="">Log out</a>
  <a href="/" i18n:translate="">Website</a>
  <a tal:condition="user and user.InGroups(('group:admin','group:editor','group:author','group:reader','group:reviewer'))"
     href="/website/editor" i18n:translate="">Editor</a>
  </div>
  </div>
</div>
</body>
</html>
</tal:block>